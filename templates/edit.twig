{% extends "layout.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="row my-2">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{{ title }}</h4>
                    <form action="{{ action }}" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control mb-2" name="work" value="{{ work.work_name }}">
                        </div>
                        <div class="form-group"><input type="hidden" class="form-control" name="id" value="{{ work.id }}"></div>
                        <button type="submit" name="btnWork" class="btn btn-primary">Сохранить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}